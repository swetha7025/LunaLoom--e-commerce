<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= product.name || "Product" %></title>

  <link rel="icon" href="/img/favicon.png">
  <link rel="stylesheet" href="/css/themify-icons.css">
  <link rel="stylesheet" href="/css/flaticon.css">

  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/all.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/header.css">
  <link rel="stylesheet" href="/css/footer.css">

  <link rel="stylesheet" href="/css/singleProduct.css">
</head>

<body>

<%- include('../partials/header') %>

<div class="product-main">

  <!-- LEFT IMAGE WITH MULTIPLE IMAGE SWIPER -->
  <div class="product-image-box">

    <div id="productCarousel" class="carousel slide" data-bs-ride="carousel">

      <!-- INDICATORS -->
      <div class="carousel-indicators">
        <% product.images.forEach((img, index) => { %>
          <button type="button"
                  data-bs-target="#productCarousel"
                  data-bs-slide-to="<%= index %>"
                  class="<%= index === 0 ? 'active' : '' %>">
          </button>
        <% }); %>
      </div>

      <!-- IMAGES -->
      <div class="carousel-inner">
        <% product.images.forEach((img, index) => { %>
          <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
            <img src="<%= img %>" class="d-block w-100" alt="<%= product.name %>">
          </div>
        <% }); %>
      </div>

      <!-- ARROWS -->
      <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
      </button>

      <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
      </button>

    </div>

  </div>

  <!-- RIGHT DETAILS -->
  <div class="product-details">

    <!-- NAME -->
    <h1 class="p-title"><%= product.name %></h1>

    <!-- PRICE -->
    <p class="p-price">₹ <%= product.price %></p>
    <p class="p-shipping">Free Shipping all over India</p>

    <!-- DESCRIPTION -->
    <% if (product.description) { %>
      <div class="p-section">
        <p class="label">Description</p>
        <p><%= product.description %></p>
      </div>
    <% } %>

    <!-- SIZES -->
    <% if(product.sizes && product.sizes.length > 0) { %>
      <div class="p-section">
        <p class="label">Size</p>
        <div class="options">
          <% product.sizes.forEach(s => { %>
            <button class="opt-btn"><%= s %></button>
          <% }) %>
        </div>
      </div>
    <% } %>

    <!-- FABRICS -->
    <% if(product.fabrics && product.fabrics.length > 0) { %>
      <div class="p-section">
        <p class="label">Fabric</p>
        <div class="options">
          <% product.fabrics.forEach(f => { %>
            <button class="opt-btn"><%= f %></button>
          <% }) %>
        </div>
      </div>
    <% } %>

    <!-- CATEGORY -->
    <div class="p-section">
      <p class="label">Category</p>
      <div class="options">
        <button class="opt-btn active"><%= product.category %></button>
      </div>
    </div>

    <!-- QUANTITY -->
    <!-- <div class="quantity-box">
      <button class="qty-btn">−</button>
      <span class="qty-number">1</span>
      <button class="qty-btn">+</button>
    </div> -->

    <!-- BUTTONS -->
    <a href="/cart/add/<%= product._id %>" class="btn-full add-cart-btn">Add to Cart</a>
    <a href="/buy/<%= product._id %>" class="btn-full buy-now-btn">Buy It Now</a>
   
  </div>

</div>

<%- include('../partials/footer') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>


</body>
</html>

