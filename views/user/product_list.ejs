          <% if (totalPages > 1) { %>
  <div class="pagination_area text-center mt-4">
    <ul class="pagination justify-content-center">

      <!-- Prev -->
      <% if (currentPage > 1) { %>
        <li class="page-item">
          <a class="page-link"
             href="/product_list?page=<%= currentPage - 1 %>&category=<%= category || '' %>&brand=<%= brand || '' %>">
            Prev
          </a>
        </li>
      <% } %>

      <!-- Page Numbers -->
      <% for (let i = 1; i <= totalPages; i++) { %>
        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
          <a class="page-link"
             href="/product_list?page=<%= i %>&category=<%= category || '' %>&brand=<%= brand || '' %>">
            <%= i %>
          </a>
        </li>
      <% } %>

      <!-- Next -->
      <% if (currentPage < totalPages) { %>
        <li class="page-item">
          <a class="page-link"
             href="/product_list?page=<%= currentPage + 1 %>&category=<%= category || '' %>&brand=<%= brand || '' %>">
            Next
          </a>
        </li>
      <% } %>

    </ul>
   </div>
  <% } %>

        </div>

      </div>
