  <style>
    .wishlist-icon {
      position: absolute;
      top: 10px;
      right: 10px;
      font-size: 22px;
      color: #444;
      cursor: pointer;
      z-index: 10;
    }

    .wishlist-icon i {
      transition: 0.3s;
    }

    .wishlist-box-message {
      position: absolute;
      top: 10px;
      right: 40px;
      background: #fff;
      border: 1px solid #ccc;
      padding: 5px 10px;
      border-radius: 5px;
      font-size: 14px;
      color: #333;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
      opacity: 0;
      transition: opacity 0.3s, transform 0.3s;
      pointer-events: none;
      z-index: 20;
    }

    .wishlist-box-message.show {
      opacity: 1;
      transform: translateY(-5px);
    }

    .cart-msg {
  margin-top: 5px;
  font-size: 14px;
  font-weight: 600;
  opacity: 0;
  transition: 0.3s;
}
.cart-msg.show {
  opacity: 1;
}

  </style>
</head>

