                      <div class="product-buttons">
                        <!-- <a href="/cart/add/<%= product._id %>" class="btn btn-sm btn-primary">Add to Cart</a> -->
                         <button class="btn btn-sm btn-primary addToCartBtn" data-id="<%= product._id %>">
