<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Product</title>

    <link rel="stylesheet" href="/css/addProducts.css">
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>

<body>
<%- include('../partials/adminSidebar', { activePage: 'addProducts' }) %>

<div class="modal-container">

    <!-- Close button -->
    <div class="close-btn">
        <a href="javascript:history.back()">
            <i class="fa-solid fa-xmark"></i>
        </a>
    </div>

    <div class="modal-header">
        <h2>Add New Product</h2>
    </div>

    <% if (success) { %>
        <div class="alert success"><%= success %></div>
    <% } %>

    <% if (error) { %>
        <div class="alert error"><%= error %></div>
    <% } %>

    <form action="/addProducts" method="POST" enctype="multipart/form-data" class="product-form">

        <!-- Row 1 -->
        <div class="form-row">
            <div class="form-group">
                <label>Name</label>
                <input type="text" name="name" required>
            </div>

            <div class="form-group">
                <label>Category</label>
                <select name="category" required>
                    <option value="">Select Category</option>
                    <option value="Bedding">Bedding</option>
                    <option value="Pillows & Cushions">Pillows & Cushions</option>
                </select>
            </div>
        </div>

        <!-- Row 2 -->
        <div class="form-row">
            <div class="form-group">
                <label>Brand</label>
                <select name="brand" required>
                    <option value="">Select Brand</option>
                    <option value="Welspun Living">Welspun Living</option>
                    <option value="Sleepwell">Sleepwell</option>
                    <option value="Zara Home">Zara Home</option>
                </select>
            </div>

            <div class="form-group">
                <label>Price (â‚¹)</label>
                <input type="number" name="price" required>
            </div>
        </div>

        <!-- Row 3 -->
        <div class="form-row">
            <div class="form-group">
                <label>Stock</label>
                <input type="number" name="stock" required>
            </div>

            <div class="form-group">
                <label>Status</label>
                <select name="status">
                    <option value="Available">Available</option>
                    <option value="Not available">Not available</option>
                </select>
            </div>
        </div>

        <!-- New Fabrics Field -->
        <div class="form-group full">
    <label>Fabrics</label>
    <div class="checkbox-group">
             <label><input type="checkbox" name="fabrics[]" value="Cotton"> Cotton</label>
            <label><input type="checkbox" name="fabrics[]" value="Silk"> Silk</label>
             <label><input type="checkbox" name="fabrics[]" value="Polyester"> Polyester</label>
             <label><input type="checkbox" name="fabrics[]" value="Bamboo Fabric"> Bamboo Fabric</label>

    </div>
</div>

        <!-- New Description Field -->
        <div class="form-group full">
            <label>Description</label>
            <textarea name="description" rows="4" placeholder="Enter product description..." required></textarea>
        </div>

        <!-- New Size Checkbox Field -->
        <div class="form-group full">
            <label>Available Sizes</label>
            <div class="checkbox-group">
                <label><input type="checkbox" name="sizes[]" value="Double"> Double</label>
                <label><input type="checkbox" name="sizes[]" value="Queen"> Queen</label>
                <label><input type="checkbox" name="sizes[]" value="King"> King</label>

            </div>
        </div>

        <!-- Images -->
        <div class="form-group full">
            <label>Images</label>
            <input type="file" name="images" multiple accept="image/*">
        </div>

        <button type="submit" class="save-btn">Save Product</button>

    </form>

</div>

</body>
</html>
