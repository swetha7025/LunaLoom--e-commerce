<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Coupons</title>

    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="/css/admin-coupons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

</head>

<body>
<div class="container">

    <!-- Sidebar -->
    <%- include('../partials/adminSidebar', { activePage: 'coupon' }) %>

    <!-- Main Content -->
    <main class="content">

        <% if (success && success.length) { %>
            <div class="alert alert-success"><%= success %></div>
        <% } %>

        <% if (error && error.length) { %>
            <div class="alert alert-error"><%= error %></div>
        <% } %>

        <!-- Page Header -->
        <div class="page-header">
            <header class="content-header">
                <h1>Coupons</h1>
                <a href="/coupons/add">
                    <button class="primary-btn">+ Add Coupon</button>
                </a>
            </header>
        </div>

        <!-- Coupons Table -->
        <table>
            <thead>
                <tr>
                     <th>ID</th>
                    <th>Coupon Code</th>
                    <th>Discount</th>
                    <th>Expiry Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                <% if (coupons && coupons.length > 0) { %>
                    <% coupons.forEach((coupon,index) => { %>
                        <tr>
                            <!-- ID -->
                            <td><%= index + 1 %></td>
                            <td><%= coupon.code %></td>
                            <td><%= coupon.discount %>%</td>
                            <td><%= coupon.expiryDate.toISOString().split('T')[0] %></td>
                            <td><%= coupon.status %></td>
                            <td>
                                <a href="/coupons/edit/<%= coupon._id %>">
                                   <button class="edit-btn">Edit</button>
                                </a>


                                <form action="/coupons/delete/<%= coupon._id %>" method="POST" style="display:inline;">
                                   <button
                                      type="button"
                                      class="delete-btn"
                                      onclick="openDeleteModal('<%= coupon._id %>')">
                                       Delete
                                    </button>

                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="5">No coupons found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>

    </main>
</div>
<div id="deleteModal" class="delete-modal">
  <div class="delete-box">
    <h5>Confirm Delete</h5>
    <p>Are you sure you want to delete this coupon?</p>

    <div class="delete-actions">
      <button class="cancel-btn" onclick="closeDeleteModal()">Cancel</button>

      <form id="deleteForm" method="POST">
        <button type="submit" class="confirm-delete-btn">Delete</button>
      </form>
    </div>
  </div>
</div>
<script>
  function openDeleteModal(id) {
    document.getElementById('deleteModal').style.display = 'flex'
    document.getElementById('deleteForm').action = `/coupons/delete/${id}`
  }

  function closeDeleteModal() {
    document.getElementById('deleteModal').style.display = 'none'
  }
</script>

</body>
</html>
