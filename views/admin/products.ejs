<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Products - LunaLoom</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="/css/adminProducts.css">
    <link rel="stylesheet" href="/css/admin.css">
</head>

<body>
<%- include('../partials/adminSidebar', { activePage: 'products' }) %>

   

    <div class="main-content">

        <div class="header">
            <h1>Products</h1>
            <a href="/addProducts">
                <button class="add-btn">+ Add New Product</button>
            </a>
        </div>

        <% if (success) { %>
            <div class="alert success"><%= success %></div>
        <% } %>

        <% if (error) { %>
            <div class="alert error"><%= error %></div>
        <% } %>

             <div class="select-container">

    <!-- Category Dropdown -->
    <!-- <div class="select-box">
        <select id="categorySelect" name="category">
            <option value="">All Categories</option>
            <option value="bedding">Bedding</option>
            <option value="pillows">Pillows & Cushions</option>
        </select>
    </div> -->


        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Images</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Brand</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>

                <% if (products && products.length > 0) { %>

                    <% products.forEach((item, index) => { %>

                        <tr>
                            <td><%= index + 1 %></td>

                            <!-- MULTIPLE IMAGES -->
                            <td>
                                <div class="product-images">
                                    <% item.images.forEach(img => { %>
                                        <img src="<%= img %>" alt="Product Image">
                                    <% }) %>
                                </div>
                            </td>

                            <td><%= item.name %></td>
                            <td><%= item.category %></td>
                             <td><%= item.brand %></td>
                            <td>â‚¹<%= item.price %></td>
                            <td><%= item.stock %></td>

                            <td>
                                <% if (item.stock > 0) { %>
                                    <span class="status available">Available</span>
                                <% } else { %>
                                    <span class="status out-of-stock">Out of Stock</span>
                                <% } %>
                            </td>

                            <td class="action-buttons">
                                <a href="/editProducts/<%= item._id %>">
                                    <button class="btn btn-edit">Edit</button>
                                </a>

                                <form action="/deleteProducts/<%= item._id %>" method="POST" class="delete-form">
                                  <button class="btn btn-delete">
                                            Delete
                                   </button>
                                </form>

                            </td>

                        </tr>

                    <% }) %>

                <% } else { %>

                    <tr>
                        <td colspan="8" style="text-align:center;">No products found.</td>
                    </tr>

                <% } %>

            </tbody>

        </table>

    </div>
    <div id="confirmPopup" class="confirm-popup">
  <div class="popup-box">
    <p>Are you sure you want to delete this product?</p>

    <div class="popup-buttons">
      <button id="confirmYes">Yes</button>
      <button id="confirmNo">No</button>
    </div>
  </div>
</div>
<script>
document.addEventListener("DOMContentLoaded", function () {
  const deleteForms = document.querySelectorAll(".delete-form");
  const popup = document.getElementById("confirmPopup");
  const yes = document.getElementById("confirmYes");
  const no = document.getElementById("confirmNo");

  let activeForm = null;

  deleteForms.forEach(form => {
    form.addEventListener("submit", function (e) {
      e.preventDefault();
      activeForm = form;
      popup.classList.add("show");
    });
  });

  yes.addEventListener("click", () => {
    popup.classList.remove("show");
    if (activeForm) activeForm.submit();
  });

  no.addEventListener("click", () => {
    popup.classList.remove("show");
    activeForm = null;
  });
});
</script>


</body>
</html>

