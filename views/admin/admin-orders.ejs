<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Orders - LunaLoom</title>

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <link rel="stylesheet" href="/css/admin-orders.css">

  <!-- Admin CSS -->
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>

  <!-- Sidebar Include -->
  <%- include('../partials/adminSidebar', { activePage: 'orders' }) %>

  <!-- Main Content -->
  <div class="main-content">
    <div class="page-title">Orders</div>

    <% if (success) { %>
      <div class="alert success"><%= success %></div>
    <% } %>

    <% if (error) { %>
      <div class="alert error"><%= error %></div>
    <% } %>

    <div class="table-container">
      <table>
        <thead>
          <tr>
             <th>Order ID</th>
            <th>Product</th>
            <th>Customer</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Order Date</th>
            <th>Payment</th>
            <th>Update</th>
            <th>Delivered</th>
          </tr>
        </thead>
        <tbody>
  <% orders.forEach(order => { %>
    <tr>
      <!-- Order ID -->
      <td><%= order._id %></td>

      <!-- Product(s) -->
      <td>
        <% order.items.forEach(item => { %>
          <div><%= item.product?.name %>  </div>
        <% }) %>
      </td>

      <!-- Customer -->
      <td><%= order.userId?.name || "N/A" %></td>

      <!-- Quantity -->
      <td><%= order.items.reduce((sum, item) => sum + item.quantity, 0) %></td>

      <!-- Total -->
      <td>₹ <%= order.totalAmount %></td>

      <!-- Order Date -->
      <td><%= new Date(order.createdAt).toLocaleDateString('en-IN') %></td>

      <!-- Payment -->
      <td><%= order.paymentMethod %></td>

      <!-- Update -->
      <td>
        <form action="/admin/orders/update/<%= order._id %>" method="POST">
          <button class="btn btn-update">Update</button>
        </form>
      </td>

      <!-- Delivered -->
      <td>
        <% if(order.orderStatus.toLowerCase() === 'delivered'){ %>
          ✔
        <% } else { %>
          <form action="/admin/orders/deliver/<%= order._id %>" method="POST">
            <button class="btn btn-deliver">Mark Delivered</button>
          </form>
        <% } %>
      </td>
    </tr>
  <% }) %>
</tbody>

      </table>
    </div>

  </div>

</body>
</html>
