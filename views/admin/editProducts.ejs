<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product</title>
    <link rel="stylesheet" href="/css/editProducts.css">
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>

<body>

 <%- include('../partials/adminSidebar', { activePage: 'editProducts' }) %>

<div class="modal-container">

    <!-- Close Button -->
    <a href="javascript:history.back()" class="close-btn">
        <i class="fa-solid fa-xmark"></i>
    </a>
    <!-- End Close Button -->

    <div class="modal-header">
        <h2>Edit Product</h2>
    </div>

    <% if (success) { %>
        <div class="alert success"><%= success %></div>
    <% } %>

    <% if (error) { %>
        <div class="alert error"><%= error %></div>
    <% } %>

    <form action="/editProducts/<%= product._id %>" method="POST" enctype="multipart/form-data" class="product-form">

        <!-- Row 1 -->
        <div class="form-row">
            <div class="form-group">
                <label>Name</label>
                <input type="text" name="name" value="<%= product.name %>" required>
            </div>

            <div class="form-group">
                <label>Category</label>
                <select name="category" required>
                    <option value="Bedding" <%= product.category === 'Bedding' ? 'selected' : '' %>>Bedding</option>
                    <option value="Pillows & Cushions" <%= product.category === 'Pillows & Cushions' ? 'selected' : '' %>>Pillows & Cushions</option>
                </select>
            </div>
        </div>

        <!-- Row 2 -->
        <div class="form-row">
            <div class="form-group">
                <label>Brand</label>
                <select name="brand" required>
                    <option value="Welspun Living" <%= product.brand === 'Welspun Living' ? 'selected' : '' %>>Welspun Living</option>
                    <option value="Sleepwell" <%= product.brand === 'Sleepwell' ? 'selected' : '' %>>Sleepwell</option>
                    <option value="Zara Home" <%= product.brand === 'Zara Home' ? 'selected' : '' %>>Zara Home</option>
                </select>
            </div>

            <div class="form-group">
                <label>Price (â‚¹)</label>
                <input type="number" name="price" value="<%= product.price %>" required>
            </div>
        </div>

        <!-- Row 3 -->
        <div class="form-row">
            <div class="form-group">
                <label>Stock</label>
                <input type="number" name="stock" value="<%= product.stock %>" required>
            </div>

            <div class="form-group">
                <label>Status</label>
                <select name="status">
                    <option value="Available" <%= product.status === 'Available' ? 'selected' : '' %>>Available</option>
                    <option value="Not available" <%= product.status === 'Not available' ? 'selected' : '' %>>Not available</option>
                </select>
            </div>
        </div>

        <!-- Current Images -->
        <div class="form-group full">
            <label>Current Images</label>
            <div class="image-preview">
                <% if (product.images && product.images.length > 0) { %>
                    <% product.images.forEach(img => { %>
                        <div class="preview-image-box">
                            <img src="<%= img %>" class="preview-image" alt="Product Image">
                            <label>
                                <input type="checkbox" name="deleteImages" value="<%= img %>"/> Delete
                            </label>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>No images uploaded yet.</p>
                <% } %>
            </div>
        </div>

        <!-- Upload New Images -->
        <div class="form-group full">
            <label>Upload New Images (optional)</label>
            <input type="file" name="images" multiple accept="image/*">
        </div>



        <button type="submit" class="save-btn">Save Changes</button>

    </form>
</div>

</body>
</html>
